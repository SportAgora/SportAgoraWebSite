<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADM Sport Agora - Eventos</title>
    <link rel="stylesheet" href="/css/adm/eventos.css">
</head>
<body>
    <%- include('../../partials/adm_navbar'); %>
    <main>
        <section class="assuCate">
            <section class="assunto">
                <h2>Assunto</h2>
                    <form action="/adm/apagar-assunto" method="POST">
                    <% if(dados.assuntos && dados.assuntos.length > 0) { %>
                        <% dados.assuntos.forEach(function(a) { %>
                            <label class="assuntoTopico"><%= a.assunto_nome %>
                                <input type="checkbox" name="assuntosSelecionados[]" value="<%= a.assunto_id%>">
                                <span class="checkmark"></span>
                            </label>
                        <% }); %>
                      <% } else { %>
                        <tr>
                          <td colspan="5">Nenhum assunto encontrado.</td>
                        </tr>
                      <% } %>
                    
                    <input type="submit" class="assunto-btn-a" value="Apagar - ">
                    <hr>
                    </form> 
                    <form action="/adm/criar-assunto" method="POST">
                        <input type="text" name="novoAssunto" id="novoAssunto" placeholder="Adicione um Assunto" value="<%= dados.novoAssunto%>">
                        <input type="submit" class="assunto-btn" value="Adicionar +">
                    </form>
                    
                
            </section>
            <section class="categoria">
                <h2>Categoria</h2> 
                <form action="/adm/apagar-categoria" method="POST">
                    <%
                        if(dados.categorias && dados.categorias.length > 0) { %>
                        <% dados.categorias.forEach(function(a) { %>
                            <label class="categoriaTopico"><%= a.categoria_nome %>
                                <input type="checkbox" name="categoriasSelecionados[]" value="<%= a.categoria_id%>">
                                <span class="checkmark"></span>
                            </label>
                        <% }); %>
                      <% } else { %>
                        <tr>
                          <td colspan="5">Nenhuma categoria encontrada.</td>
                        </tr>
                      <% } %>
                    
                    <input type="submit" class="categoria-btn-a" value="Apagar -">
                    </form>
                    <hr>
                    <form action="/adm/criar-categoria" method="POST">
                        <input type="text" name="novaCategoria" id="novaCategoria" placeholder="Adicione um Categoria" value="<%= dados.novaCategoria%>">
                        <input type="submit" class="categoria-btn" value="Adicionar +">
                    
                </form>
            </section>
        </section>
        <section class="evento">
            <h2>Eventos</h2>
            <table class="evento-tabela">
                <thead>
                    <tr>
                        <th>Nome do Evento</th>
                        <th>Assunto</th>
                        <th>Categoria</th>
                        <th>Data incio</th>
                        <th>Horario</th>
                        <th>Data término</th>
                        <th>Descrição</th>            
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="limite"><a href="descricaoEvento.html">-</a></td>
                        <td class="limite"><a href="descricaoEvento.html">-</a></td>
                        <td class="limite"><a href="descricaoEvento.html">-</a></td>
                        <td class="limite"><a href="descricaoEvento.html">-</a></td>
                        <td class="limite"><a href="descricaoEvento.html">-</a></td>
                        <td class="limite"><a href="descricaoEvento.html">-</a></td>
                        <td class="limite"><a href="descricaoEvento.html">-</a></td>
                    </tr>
                    <tr>
                        <td class="limite"><input type="text" name="" id="" value="-" readonly onclick="console.log(`gay`)"></td>
                        <td class="limite"><input type="text" name="" id="" value="-" readonly onclick="window.location.href='descricaoEvento.html'"></td>
                        <td class="limite"><input type="text" name="" id="" value="-" readonly></td>
                        <td class="limite"><input type="text" name="" id="" value="-" readonly></td>
                        <td class="limite"><input type="text" name="" id="" value="-" readonly></td>
                        <td class="limite"><input type="text" name="" id="" value="-" readonly></td>
                        <td class="limite"><input type="text" name="" id="" value="-" readonly></td>
                    </tr>
                    <tr>
                        <td class="limite"><input type="text" name="" id="" value="-" readonly></td>
                        <td class="limite"><input type="text" name="" id="" value="-" readonly></td>
                        <td class="limite"><input type="text" name="" id="" value="-" readonly></td>
                        <td class="limite"><input type="text" name="" id="" value="-" readonly></td>
                        <td class="limite"><input type="text" name="" id="" value="-" readonly></td>
                        <td class="limite"><input type="text" name="" id="" value="-" readonly></td>
                        <td class="limite"><input type="text" name="" id="" value="-" readonly></td>
                    </tr>
                </tbody>
                
            </table>
            <button class="evento-btn">+ Novo Evento</button>
        </section>
    </main>
    <%- include('../../partials/adm_footer'); %>
</body>
</html>