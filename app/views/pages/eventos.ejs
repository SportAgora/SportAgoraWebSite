<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eventos</title>
    
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/eventos.css">
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.5.1/uicons-regular-rounded/css/uicons-regular-rounded.css'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/carrosel.css">
    <script defer src="/js/script.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script defer src="/js/carrossel.js"></script>
    <link rel="icon" href="imagens/SportAgora.png">
</head>
<body class="Eventospage">
    <%- include('../partials/navbar'); %>

    <section class="container">
        <header class="Eventos1">
            <h1 class="text">Eventos</h1>
        </header>
        <article class="filtros1">
            <article class="left-filtros">
                <label for="esporte">Esporte:</label>
                <select id="esporte" name="esporte">
                    <option value="futebol">Futebol</option>
                    <option value="basquete">Basquete</option>
                    <option value="volei">Vôlei</option>
                </select>
                <label for="estado">Estado:</label>
                <select id="estado" name="estado">
                    <option value="sp">SP</option>
                    <option value="rj">RJ</option>
                    <option value="mg">MG</option>
                </select>
                <label for="cidade">Cidade:</label>
                <select id="cidade" name="cidade">
                    <option value="sao-paulo">São Paulo</option>
                    <option value="rio-de-janeiro">Rio de Janeiro</option>
                    <option value="belo-horizonte">Belo Horizonte</option>
                </select>
            </article>
            <article class="right-filtros">
                <label for="data">Data do Evento:</label>
                <input type="date" id="data" name="data">
            </article>
        </article>
    </section>
    <!-- Carrosel -->
    <section class="carousel-section">
        <article class="carousel-title">FILTROS RÁPIDOS</article>
        <article class="carousel-container">
            <aside class="carousel">
                <aside class="carousel-item">
                    <a href="pagina1.html">
                    <img src="/imagens/corrida.png" alt="Corrida de Rua">
                    <p>Corrida de Rua</p>
                    </a>
                </aside>
                <aside class="carousel-item">
                    <a href="pagina1.html">
                    <img src="/imagens/ciclismo.png" alt="Ciclismo">
                    <p>Ciclismo</p>
                    </a>
                </aside>
                <aside class="carousel-item">
                    <a href="pagina1.html">
                    <img src="/imagens/bikemotanha.png" alt="Mountain Bike">
                    <p>Mountain Bike</p>
                    </a>
                </aside>
                <aside class="carousel-item">
                    <a href="pagina1.html">
                    <img src="/imagens/triatlo.png" alt="Triathlon">
                    <p>Triathlon</p>
                    </a>
                </aside>
                <aside class="carousel-item">
                    <a href="pagina1.html">
                    <img src="/imagens/natacao.png" alt="Natação">
                    <p>Natação</p>
                    </a>
                </aside>
                <aside class="carousel-item">
                    <a href="pagina1.html">
                    <img src="/imagens/fut.png" alt="Triathlon Brasil">
                    <p>Futebol</p>
                    </a>
                </aside>
                <aside class="carousel-item">
                    <a href="pagina1.html">
                    <img src="/imagens/volei.png" alt="Uphill">
                    <p>Volei</p>
                    </a>
                </aside>
                <aside class="carousel-item">
                    <a href="pagina1.html">
                    <img src="/imagens/trilha.png" alt="Corrida de Aventura">
                    <p>Trilha</p>
                    </a>
                </aside>
                <aside class="carousel-item">
                    <a href="pagina1.html">
                    <img src="/imagens/ping.png" alt="Uphill">
                    <p>Ping pong</p>
                    </a>
                </aside>
                <aside class="carousel-item">
                    <a href="pagina1.html">
                    <img src="/imagens/skate.png" alt="Uphill">
                    <p>Skate</p>
                    </a>
                </aside>
            </aside>
            <aside class="carousel-arrow left-arrow">&lt;</aside>
            <aside class="carousel-arrow right-arrow">&gt;</aside>
        </article>
    </section>
    <script defer src="/js/carrossel.js"></script>
    <%- include('../partials/evento'); %>
    <%- include('../partials/evento'); %>
    <%- include('../partials/evento'); %>
    <%- include('../partials/evento'); %>

    <%- include('../partials/footer'); %>
</body>
</html>
