<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <link rel="stylesheet" href="/css/base.css">
        <link rel="stylesheet" href="/css/eventos.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
        <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
        <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
        <script defer src="/js/carrossel.js"></script>
    </head>

<body class="Eventospage">

    <%- include('../partials/navbar'); %>
    

    <div class="container">
        <header class="Eventos1">
            <h1 class="text">Eventos</h1>
        </header>
        <div class="filtros1">
            <div class="left-filtros">
                <label for="esporte">Esporte:</label>
                <select id="esporte" name="esporte">
                    <option value="futebol">Futebol</option>
                    <option value="basquete">Basquete</option>
                    <option value="volei">Vôlei</option>
                </select>
                <label for="estado">Estado:</label>
                <select id="estado" name="estado">
                    <option value="sp">SP</option>
                    <option value="rj">RJ</option>
                    <option value="mg">MG</option>
                </select>
                <label for="cidade">Cidade:</label>
                <select id="cidade" name="cidade">
                    <option value="sao-paulo">São Paulo</option>
                    <option value="rio-de-janeiro">Rio de Janeiro</option>
                    <option value="belo-horizonte">Belo Horizonte</option>
                </select>
            </div>
            <div class="right-filtros">
                <label for="data">Data do Evento:</label>
                <input type="date" id="data" name="data">
            </div>
        </div>
    </div>

    <!-- Carrosel -->

    <div class="carousel-section">
        <div class="carousel-title">FILTROS RÁPIDOS</div>
        <div class="carousel-container">
            <div class="carousel">
                <!-- Add more items as needed -->
                <div class="carousel-item">
                    <img src="/imagens/corrida.png" alt="Corrida de Rua">
                    <p>Corrida de Rua</p>
                </div>
                <div class="carousel-item">
                    <img src="img2.jpg" alt="Ciclismo">
                    <p>Ciclismo</p>
                </div>
                <div class="carousel-item">
                    <img src="img3.jpg" alt="Mountain Bike">
                    <p>Mountain Bike</p>
                </div>
                <div class="carousel-item">
                    <img src="img4.jpg" alt="Triathlon">
                    <p>Triathlon</p>
                </div>
                <div class="carousel-item">
                    <img src="img5.jpg" alt="Natação">
                    <p>Natação</p>
                </div>
                <div class="carousel-item">
                    <img src="img6.jpg" alt="Triathlon Brasil">
                    <p>Triathlon Brasil</p>
                </div>
                <div class="carousel-item">
                    <img src="img7.jpg" alt="Uphill">
                    <p>Uphill</p>
                </div>
                <div class="carousel-item">
                    <img src="img8.jpg" alt="Corrida de Aventura">
                    <p>Corrida de Aventura</p>
                </div>
                <div class="carousel-item">
                    <img src="img9.jpg" alt="Uphill">
                    <p>Circuito</p>
                </div>
                <div class="carousel-item">
                    <img src="img10.jpg" alt="Uphill">
                    <p>Corrida de bike</p>
                </div>
            </div>
            
            <div class="carousel-arrow left-arrow">&lt;</div>
            <div class="carousel-arrow right-arrow">&gt;</div>
        </div>
    </div>

    <script defer src="/js/carrossel.js"></script>
    

             
    <%- include('../partials/evento'); %>
    <%- include('../partials/evento'); %>
    <%- include('../partials/evento'); %>
    <%- include('../partials/evento'); %>
    
    

    <%- include('../partials/footer'); %>

</body>
</html>