<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/erro.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="/js/login.js" defer></script>
    <link rel="icon" href="imagens/SportAgora.png">
</head>
<body>
    <%
    let  erroValidacao =  {"nome":"","email":"", "senha":"", "repsenha":"" };
    let  msgErro =  {"nome":"","email":"", "senha":"","repsenha":"" };
    if(erros) {
        erros.errors.forEach(function(erro) {
            if (erro.path == "nome") {
                erroValidacao.nome = "erro",
                msgErro.nome = erro.msg
            }
            if (erro.path == "email") {
                erroValidacao.email = "erro",
                msgErro.email = erro.msg
            }
            if (erro.path == "senha") {
                erroValidacao.senha = "erro",
                msgErro.senha = erro.msg
            }
            if (erro.path == "repsenha") {
                erroValidacao.repsenha = "erro",
                msgErro.repsenha = erro.msg
            }
        })
    }; %>

    <header>
    <%- include('../partials/navbar'); %> 
    </header>
    <main class="main_login">    <!-- pq q eu fiz uma class pra main sendo q ja é main? -->
        <section class="container5">
            <article class="buttonsForm">
                <h1>Bem-vindo</h1>
            </article>

            <form id="signup" method="post" action="/registro_post">
                <input type="text" placeholder="Nome" name="nome" id="nome" value="<%= valores.nome  %>" class="<%= erroValidacao.nome %>"> 
                <span class="spanerro"><%= msgErro.nome %></span><br>

                <input type="text" placeholder="Email" name="email" id="email" value="<%= valores.email  %>" class="<%= erroValidacao.email %>"> 
                <span class="spanerro"><%= msgErro.email %></span><br>

                <input type="text" placeholder="Senha" name="senha" id="senha" value="<%= valores.senha  %>" class="<%= erroValidacao.senha %>"> 
                <span class="spanerro"><%= msgErro.senha %></span><br>

                <input type="text" placeholder="Repita a Senha" name="repsenha" id="repsenha" value="<%= valores.repsenha  %>" class="<%= erroValidacao.repsenha %>"> 
                <span class="spanerro"><%= msgErro.repsenha %></span><br>
                
                <div class="divCheck">
                <input type="checkbox" />
                <span>Lembre minha senha</span>
                </div>

                <input type="submit" id="enviar_login" value="REGISTRAR">
            </form>

            <section class="outras">
                <h1>Outras opções de conexão de conta</h1>
                <button type="submit" class="google" onclick="google()">
                    <img src='imagens/normal_u17.png' alt="Google">
                </button>
                <button type="submit" class="microsofiti" onclick="microsofiti()">
                    <img src='imagens/normal_u20.png' alt="Google">
                </button>
            </section>
        </section>  
    </main>
    <%- include('../partials/footer'); %>
</body>
</html>
