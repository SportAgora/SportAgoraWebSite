<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SportAgora</title>
    <link rel="stylesheet" href="https://cdn-uicons.flaticon.com/2.5.1/uicons-regular-rounded/css/uicons-regular-rounded.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">


    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script defer src="/js/perfil.js"></script>
    <script defer src="/js/script.js"></script>
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.5.1/uicons-regular-rounded/css/uicons-regular-rounded.css'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <script defer src="/js/perfil.js"></script>
    <script src="js/darkmodeswitch.js"></script>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/simple-notify@0.5.5/dist/simple-notify.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/simple-notify@0.5.5/dist/simple-notify.min.js"></script>
</head>
<body>

<header>
    <nav class="navbar">
        <article class="navbar-left">
            <button class="hamburger-menu">
                <img src="/imagens/menu-burger.png" alt="Menu" class="menu-icon">
            </button>
            <a class="links-home" href="/">
                <img src="imagens/SportAgora.png" alt="Logo" class="logo">
                <span class="site-name">SportAgora
            </a>
        </article>
        <article class="navbar-center">
            <button class="nav-button" onclick="location.href='/eventos'">Eventos</button>
            <button class="nav-button" onclick="location.href='/pratique'">Pratique</button>
        </article>
        <article class="navbar-right">
            
    <article class="search-bar-container">
    <section class="search-bar">
        <img src="/imagens/search.png" alt="Search" class="search-icon">
        <input 
        type="text" 
        id="inputPesquisa" 
        placeholder="Busque por Esportes e muito mais..."
        oninput="mostrarSugestoes()"
        onkeydown="verificarEnter(event)"
        >
        <span class="limpar" onclick="limparPesquisa()">×</span>
    </section>
    <ul id="sugestoes" class="painel-sugestoes oculto"></ul>
    </article>



            <button class="subscribe-button" onclick="location.href='/organizador'">Torne-se Organizador</button>

        <!-- Ícone de notificação -->
        <section class="notificacao-container">
        <button id="botaoNotificacao" class="botaoNotificacao">
            <article class="icone-notificacao-wrapper">
            <img src="/imagens/botao-de-notificacoes.png" alt="Notificações" class="icone-notificacao">
            <span id="badgeNotificacao" class="badge-notificacao oculto">0</span>
            </article>
        </button>

        <!-- Painel de notificações -->
        <section id="painelNotificacoes" class="painel-notificacoes oculto">
            <article id="listaNotificacoes"></article>
        </section>
        </section>


            <button class="login-button">
                <% if (usuario) { %>
                <img src="<%= usuario.foto %>" alt="User" class="user-icon">
                    <% } else {%>
                <img src="/imagens/Icon.png" alt="User" class="user-icon">
                <% }%>
                </span>
                <img src="/imagens/menu-burger.png" alt="Menu" class="menu-icon">
            </button>
            <article class="login-button-mobile">
                <a onclick="location.href='/perfil'">
                <% if (usuario) { %>
                    <img src="<%= usuario.foto %>" alt="User" class="user-icon">
                        <% } else {%>
                    <img src="/imagens/Icon.png" alt="User" class="user-icon">
                    <% }%>
                </a>
            </article>
        </article>
    </nav>
</header>

<aside id="menu-panel" class="menu-panel">
    <% if (usuario) { %>
    <button class="panel-button" onclick="location.href='/perfil'">Perfil</button>
    <button class="panel-button" onclick="location.href='/editar-perfil'">Editar Perfil</button>
    <button class="panel-button" onclick="location.href='/logout'">Sair</button>
    <% } else { %>
    <button class="panel-button" onclick="location.href='/cadastro'">Cadastre-se</button>
    <button class="panel-button" onclick="location.href='/login'">Login</button>
    <% } %>

    <hr>
    <button class="panel-button" onclick="location.href='/login'">Anuncie seu evento</button>
    <hr>
    <button class="panel-button" onclick="toggleMode()">Claro/Escuro</button>
</aside>



<!-- mobile -->

<section id="mobile-menu" class="mobile-menu">
    <button class="mobile-nav-button" onclick="location.href='/'">Início</button>
    <button class="mobile-nav-button" onclick="location.href='/eventos'">Eventos</button>
    <button class="mobile-nav-button" onclick="location.href='/pratique'">Pratique</button>
    <button class="mobile-nav-button" onclick="location.href='/organizador'">Organizador</button>
    <hr>
    <button class="mobile-nav-button" onclick="location.href='/login'">Anuncie seu evento</button>
    <hr>
    <button class="mobile-nav-button" onclick="toggleMode()">Claro/Escuro</button>
    <hr>
    <% if (usuario) { %>
        <button class="mobile-nav-button" onclick="location.href='/perfil'">Perfil</button>
        <button class="mobile-nav-button" onclick="location.href='/editar-perfil'">Editar Perfil</button>
        <button class="mobile-nav-button" onclick="location.href='/logout'">Sair</button>
        <% } else { %>
        <button class="mobile-nav-button" onclick="location.href='/cadastro'">Cadastre-se</button>
        <button class="mobile-nav-button" onclick="location.href='/login'">Login</button>
        <% } %>
</section>

<article class="mobile-search-bar">
    <article class="search-bar-mobile">
        <img src="/imagens/search.png" alt="Search" class="search-icon">
        <input type="text" placeholder="Busque por Esportes e muito mais...">
    </article>   
</article>

<section class="mobile-assinatura">
    <button class="mobile-subscribe-button" onclick="location.href='/planos'">Assine Sport+</button>
</section>

<script src="script.js"></script>

</body>
</html>
